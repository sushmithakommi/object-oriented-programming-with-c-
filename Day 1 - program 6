# object-oriented-programming-with-c-
[10:13 am, 25/01/2023] Geetha Reddy: #include <iostream>
using namespace std;
int main()
{
    int n = 5;
for(int i=n; i>0; i--)
    {
for(int j=0; j<=n; j++)     
	   {
        if (j>=i)
        {
cout<<"*";
        }
        else
        {
cout<<" ";
        }
      }
cout<<endl;
    }
    return 0;
}
